
# Single .env used for both dev (default) and stage
# Dev profile is default via COMPOSE_PROFILES=dev
COMPOSE_PROFILES=dev

# Port
APP_PORT=8444
FUNCTIONS_WORKER_RUNTIME=dotnet-isolated
FUNCTIONS_EXTENSION_VERSION=~4

# Default to Azurite for local dev
AZURITE_BLOB_ENDPOINT=http://azurite:10000/devstoreaccount1
AZURITE_QUEUE_ENDPOINT=http://azurite:10001/devstoreaccount1
AZURITE_TABLE_ENDPOINT=http://azurite:10002/devstoreaccount1
AZURITE_ACCOUNT_NAME=devstoreaccount1
AZURITE_ACCOUNT_KEY=Eby8vdM02xNOcqH9QWZ5ZTcQh8A7WJb9+...

# Functions host storage connection (defaults to Azurite; override for stage)
AzureWebJobsStorage=DefaultEndpointsProtocol=http;AccountName=${AZURITE_ACCOUNT_NAME};AccountKey=${AZURITE_ACCOUNT_KEY};BlobEndpoint=${AZURITE_BLOB_ENDPOINT};QueueEndpoint=${AZURITE_QUEUE_ENDPOINT};TableEndpoint=${AZURITE_TABLE_ENDPOINT}

# Cosmos emulator defaults (not used by sample functions yet)
COSMOSDB_ACCOUNT_ENDPOINT=https://cosmos:8081/
COSMOSDB_KEY=C2y6yDjf5/R+ob0N8A6Q==...
COSMOSDB_DATABASE=appdb
COSMOSDB_CONTAINER=items
